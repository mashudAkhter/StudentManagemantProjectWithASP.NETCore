@model IEnumerable<SchoolManagementCore.Models.Course>

@{
    ViewData["Title"] = "CourseList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div style="max-width:600px">
        <h1 style="text-align:center; color:palevioletred">CourseList</h1>

        <p>
            <a asp-action="AddCourse" class="btn btn-info">Create New</a>
        </p>
        <table class="table table-striped table-bordered" style="max-width:500px;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseName)
                    </th>
                    <th colspan="2" style="text-align:center">Action...</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseName)
                        </td>
                        <td style="text-align:center">
                            @Html.ActionLink("Edit", "EditCourse", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })&nbsp;&nbsp; &nbsp;&nbsp;
                            @Html.ActionLink("Delete", "DeleteCourse", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            @Html.ActionLink("Go to Student List", "Index", "Student")
        </div>
    </div>
   
</div>

