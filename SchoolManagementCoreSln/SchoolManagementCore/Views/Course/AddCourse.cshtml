@model SchoolManagementCore.Models.ViewModels.CreateCourseViewModel

@{
    ViewData["Title"] = "AddCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h1>Add Course</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddCourse" asp-controller="Course" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CourseName" class="control-label"></label>
                    <input asp-for="CourseName" class="form-control" />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="CourseList">Back to List</a>
    </div>
</div>




