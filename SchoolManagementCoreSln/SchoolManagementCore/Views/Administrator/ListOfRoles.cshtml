@model IEnumerable<IdentityRole>
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "ListOfRoles";
}

<div class="container">
    <h1>ListOfRoles</h1>
    @if (Model.Any())
    {
        <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="Administrator">Create New Role</a>
        <table class="table table-bordered table-striped" style="max-width:600px;">
            <tr>
                <th>Role Name</th>
                <th colspan="2" style="text-align:center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td style="text-align:center">
                        <a asp-controller="Administrator"  asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>

                    </td>
                    <td style="text-align:center"><a href="#" class="btn btn-danger">Delete</a></td>
                </tr>
            }

        </table>
    }
    else
    {
        <div class="card">
            <div class="card-header">No Roles Created yet</div>
            <div class="card-body"></div>
            <h5 class="card-title">Click the button below to Create role</h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Administrator" asp-action="CreateRole">Create Role</a>
        </div>
    }

</div>



