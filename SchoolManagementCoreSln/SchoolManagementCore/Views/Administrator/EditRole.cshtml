@model EditRoleViewModel
@{
    ViewData["Title"] = "EditRole";
}


<div class="container bg-info" style="max-width:500px">

    <form method="post" class="mt-3">
        <div class="form-group row">
            @*<label asp-for="Id" class="col-sm-2 col-form-label"></label>*@
            <div class="col-sm-10">
                <input asp-for="Id" type="hidden" disabled class="form-control" />
            </div>
        </div>
        <table class="table table-bordered" style="max-width:500px;">
            <tr><th colspan="2" class="text-center" style="font-size:130%;">EditRole</th></tr>
            <tr>
                <th style="text-align:center">Role Name</th>
                <th colspan="2" style="text-align:center">Actions...</th>
            </tr>
            <tr>
                <td>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                    <div asp-validation-summary="All" class="text-danger">

                    </div>
                </td>

                <td>
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="ListOfRoles" class="btn btn-success">Cancel</a>
                </td>
            </tr>
        </table>
        @*<div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>*@
        @*<div asp-validation-summary="All" class="text-danger">

            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="ListOfRoles" class="btn btn-primary">Cancel</a>
                </div>
            </div>*@
        <div class="card" style="max-width:500px;">
            <div class="card-header">
                <h3>Users in Role</h3>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var item in Model.Users)
                    {
                        <h5 class="card-title">@item</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at this moment</h5>
                }
            </div>
            <div class="card-footer">
                <a asp-controller="Administrator" asp-action="EditUserInRole" style="width:auto" asp-route-roleId="@Model.Id" class="btn btn-primary">Add or Remove users from this role</a>
            </div>
        </div>

    </form>
</div>


